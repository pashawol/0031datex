mixin item-sos(icon, a='#')
	+e.A.item(class=`soc__item--${icon}` href= a target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('vk')
			+item-sos('instagram')
			+item-sos('telegram')
			+item-sos('twitter')


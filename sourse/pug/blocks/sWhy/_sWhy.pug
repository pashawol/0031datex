		.el-img.el-img--11(class="wow  animate__fadeInUp " data-wow-delay=".6s")
			img.img-svg(loading="lazy" src="img/head-el-7.svg", alt="")
		.el-img.el-img--12(class="wow  animate__fadeInUp " data-wow-delay=".6s")
			img.img-svg(loading="lazy" src="img/head-el-5.svg", alt="")
